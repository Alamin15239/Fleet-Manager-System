# Production Environment Configuration

# Database - Use connection pooling for production
DATABASE_URL="postgresql://user:password@host:5432/fleet_management?pgbouncer=true&connection_limit=10"

# Authentication - MUST BE CHANGED
JWT_SECRET="CHANGE-THIS-TO-A-SECURE-RANDOM-STRING-AT-LEAST-32-CHARS"
NEXTAUTH_URL="https://yourdomain.com"
NEXTAUTH_SECRET="CHANGE-THIS-TO-A-SECURE-RANDOM-STRING"

# Email Service
RESEND_API_KEY="re_xxxxxxxxxxxxx"
EMAIL_FROM="Fleet Manager <noreply@yourdomain.com>"
RESEND_DOMAIN="yourdomain.com"

# App Configuration
NEXT_PUBLIC_APP_URL="https://yourdomain.com"
NODE_ENV="production"

# Redis (Recommended for production)
REDIS_URL="redis://your-redis-host:6379"

# Monitoring (Optional)
NEXT_PUBLIC_SENTRY_DSN="https://xxxxx@sentry.io/xxxxx"

# Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID="your-analytics-id"

# Disable sync in production
SYNC_ENABLED="false"

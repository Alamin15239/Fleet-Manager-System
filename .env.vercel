# Vercel Environment Configuration
# Copy these values to your Vercel project environment variables

# Database - Use Vercel Postgres or external PostgreSQL
DATABASE_URL="postgresql://username:password@host:port/database"

# Authentication - Generate new secrets for development
JWT_SECRET="dev-super-secure-32-character-secret-key-here-change-this"
NEXTAUTH_URL="https://your-vercel-app.vercel.app"
NEXTAUTH_SECRET="dev-nextauth-secret-key-change-this-too"

# Email Service (Resend)
RESEND_API_KEY="your-resend-api-key"
EMAIL_FROM="Fleet Manager Dev <noreply@yourdomain.com>"
RESEND_DOMAIN="yourdomain.com"

# App Configuration
NEXT_PUBLIC_APP_URL="https://your-vercel-app.vercel.app"

# Real-time Sync
SYNC_ENABLED="false"
PRODUCTION_URL="https://your-vercel-app.vercel.app"

# Optional: AI Features
OPENAI_API_KEY="your-openai-api-key"